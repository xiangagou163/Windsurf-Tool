{
  "name": "windsurf-tool",
  "version": "4.4.2",
  "description": "Windsurf-Tool - 自动化管理 Windsurf 账号，支持批量注册、账号切换、到期提醒等功能",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:all": "npm run build:mac && npm run build:win && npm run build:linux",
    "build:mac": "CSC_TIMESTAMP_SERVER= PATH=\"$HOME/bin:$PATH\" electron-builder --mac",
    "build:mac:x64": "CSC_TIMESTAMP_SERVER= PATH=\"$HOME/bin:$PATH\" electron-builder --mac --x64",
    "build:mac:arm64": "CSC_TIMESTAMP_SERVER= PATH=\"$HOME/bin:$PATH\" electron-builder --mac --arm64",
    "build:mac:interactive": "./build-mac.sh",
    "build:win": "electron-builder --win",
    "build:win:x64": "electron-builder --win --x64",
    "build:win:arm64": "electron-builder --win --arm64",
    "build:win:docker": "./build-docker.sh",
    "build:linux": "electron-builder --linux",
    "build:linux:x64": "electron-builder --linux --x64",
    "test:switch-with-reset": "electron test-account-switch-with-reset.js",
    "postinstall": "echo 'Installation complete'"
  },
  "keywords": [
    "windsurf",
    "account",
    "automation",
    "registration",
    "management"
  ],
  "author": "crispvibe",
  "license": "MIT",
  "homepage": "https://github.com/crispvibe/Windsurf-Tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/crispvibe/Windsurf-Tool.git"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fs-extra": "^11.3.2",
    "imap": "^0.8.19",
    "keytar": "^7.9.0",
    "lucide": "^0.553.0",
    "mailparser": "^3.6.5",
    "node-dpapi-prebuilt": "^1.0.0",
    "puppeteer": "^21.11.0",
    "puppeteer-real-browser": "^1.3.8",
    "sql.js": "^1.10.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3",
    "javascript-obfuscator": "^4.1.1",
    "node-abi": "^4.17.0",
    "wine-darwin": "^1.9.17-1"
  },
  "build": {
    "appId": "com.crispvibe.windsurf.tool",
    "productName": "Windsurf-Tool",
    "copyright": "Copyright © 2024 crispvibe",
    "asar": false,
    "compression": "normal",
    "afterPack": "./build-scripts/afterPack.js",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "index.html",
      "language-selector.html",
      "renderer.js",
      "js/**/*",
      "src/**/*",
      "bin/**/*",
      "pay/**/*",
      "build-scripts/**/*",
      "package.json",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "timestamp": false,
      "identity": null,
      "icon": "build/icon.png",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}",
      "entitlements": null,
      "entitlementsInherit": null,
      "type": "distribution",
      "minimumSystemVersion": "10.13.0",
      "darkModeSupport": true,
      "mergeASARs": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.png",
      "background": null,
      "window": {
        "width": 600,
        "height": 450
      },
      "contents": [
        {
          "x": 150,
          "y": 250,
          "type": "file"
        },
        {
          "x": 450,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "format": "ULFO",
      "internetEnabled": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Windsurf Tool",
      "signingHashAlgorithms": ["sha256"]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "removeAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Windsurf-Tool",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "LICENSE",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "zh_CN",
        "en_US"
      ],
      "language": "2052",
      "include": "build-scripts/installer.nsh"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "desktop": {
        "Name": "Windsurf-Tool",
        "Comment": "Windsurf账号管理工具",
        "GenericName": "Account Manager",
        "Categories": "Development;Utility;"
      }
    }
  }
}
